{
  "extends": ["eslint:recommended"],
  "env": {
    "browser": true,
    "es2020": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",
    "no-unused-vars": "warn",
    "no-undef": "error",
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "indent": ["error", 2],
    "no-trailing-spaces": "error",
    "eol-last": "error",
    "comma-dangle": ["error", "never"],
    "object-curly-spacing": ["error", "always"],
    "array-bracket-spacing": ["error", "never"],
    "space-before-function-paren": ["error", "never"],
    "keyword-spacing": "error",
    "space-infix-ops": "error",
    "no-multiple-empty-lines": ["error", { "max": 2 }],
    "prefer-const": "error",
    "no-var": "error",
    "arrow-spacing": "error",
    "template-curly-spacing": "error"
  },
  "ignorePatterns": [
    "node_modules/",
    "*.min.js",
    "bundle.js"
  ]
}